<h1>Listing shops</h1>

<table>
  <thead>
    <tr>
      <th>Shop name</th>
      <th>Address</th>
      <th>Category</th>
      <th>Owner</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.shop_name %></td>
        <td><%= shop.address %></td>
        <td><%= shop.category %></td>
        <td><%= shop.owner %></td>
        <td><%= shop.balance %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop', new_shop_path %>
